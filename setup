# # # Musikku Music Bot Installer
cgreen = '\033[0;32m'
cyellow = '\033[0;33m'
cpurple = '\033[0;35m'
update() {
    sudo apt - get update && sudo apt - get upgrade - y
}
pprint() {
    printf ""
    "$cpurple $1"
    ""
}
packages() {
    sudo apt - get install python3 - pip ffmpeg - y
}
node() {
    curl - fssL https: //deb.nodesource.com/setup_17.x | sudo -E bash - && sudo apt-get install nodejs -y && npm i -g npm
}
repo() {
    git clone https: //github.com/kenkansaja/Musikku &&  cd Musikku
}
installation() {
    pip3 install - U - r requirements.txt
}
clear
pprint "Welcome to Musikku Bot Setup Installer\n\n"
pprint "If you see any error during Installation Process, Please refer to these files for logs: "
pprint "\nFor node js errors , Checkout nodelog.txt"
pprint "\nFor pypi packages errors , Checkout pypilog.txt"
sleep 5
pprint "\n\nStarting Update and Installing, Please dont Press any key till you are asked to type your values.\n\n"
update & > /dev/null
pprint "Update Has Been Completed, Now Installing  Necessory Packages!\n\n"
packages & > /dev/null
pprint "Packages Installed Successfully!, Installing Nodejs and Npm!\n\n"
node & > nodelog.txt
pprint "Nodejs Installed Successfully!, Now Installing Pypi Packages!\n\n"
installation > pypilog.txt
pprint "\n\n\n\n\n\n\n\nMusikku Bot Installation Completed!"
sleep 5
clear
pprint "If you saw any errors on the last page, Please try re executing the script!"
sleep 5
pprint "\nEnter Your Values Below\n\n\n"
pprint "API ID:  "
read api_id
sleep 1
pprint "\nAPI HASH: "
read api_hash
sleep 1
pprint "\nBOT TOKEN: "
read bot_token
sleep 1
pprint "\nMONGO DB URI: "
read mongo_db
sleep 1
pprint "\n MUST JOIN: "
read join
sleep 1
pprint "\nLOG GROUP ID: "
read logger
sleep 1
pprint "\nPYROGRAM STRING SESSION OF ASSISTANT ACCOUNT: "
read string_session
sleep 1
pprint "\nMUSIC BOT NAME: "
read mbt
pprint "\nOwner Id :"
read ownid
pprint "$cgreen \n\nProcessing your vars, Wait a while!"
sleep 5
if [-f.env];
then
sudo rm.env
fi
echo ""
"API_ID = $api_id
API_HASH = $api_hash
BOT_TOKEN = $bot_token
MONGO_DB_URI = $mongo_db
MUST_JOIN = $join
LOG_GROUP_ID = $logger
MUSIC_BOT_NAME = $mbt
STRING_SESSION = $string_session
OWNER_ID = $ownid ""
" > .env
clear
pprint "\n\n\nYour Vars have been saved Successfully!, Thanks for using Yukki Installer, now you can proceed by starting the bot with bash start!"
pprint "\n\n\nWant more vars?"
pprint "\nCheckout config.py and readme.md inside config folder for addtional vars. You can change all images , Thumbs, mode and everything from vars. Have a look towards them\n\n"
